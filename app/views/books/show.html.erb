<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<div class="text-success">
				<%= flash[:notice]%>
			</div>
			<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
					<table class="table">
			      		<tbody><tr></tr>
			      		<tr>
			    	  		<th>name</th>
			    	  		<th><%= @user.name %></th>

			      		</tr>
			      		<tr>
			    	  		<th>introduction</th>
					    	<th><%= @user.introduction %></th>
					    </tr>
						</tbody>
					</table>
					<div class='row'>
					<%= link_to '', edit_user_path(@user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
					</div>




				<h2><strong>New book</strong></h2>
				<%= form_for(@book_new) do |f| %>
					<% if @book.errors.any? %>
			    	<div class = "alert alert-warning">
			    		<h3>error</h3>
			        	<ul>
			            	<% @book.errors.full_messages.each do |message| %>
			                <li><%= message %></li>
			            	<% end %>
			        	</ul>
			    	</div>
				<% end %>

			    <p>Title</p>
			    <%= f.text_field :title,class:'col-xs-12' %>

			    <p>Opinion</p>
			    <%= f.text_area :body,class:'col-xs-12' %>

			    <br>
			    <%= f.submit 'Create Book',class:'btn btn-primary col-xs-12' %>

				<% end %>
		</div>
		<div class="col-xs-9">
			<h2>Book detail</h2>
				<table class="table">
					<tbody>
						<tr>
							<td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
								<br><br>
								<%= link_to @user.name, user_path(@user) %></td>
							<td><%= link_to @book.title, book_path(@book) %></td>
							<td><%= @book.body %></td>
							<% if current_user == @user %>
							<td><%= link_to "Edit", edit_book_path(@book),class:'btn-sm btn-success' %></td>
							<td><%= link_to "Destroy", book_path(@book),class:'btn-sm btn-danger', method: :delete, data: { confirm: '本当に消しますか?' } %></td>
							<% end %>
      					</tr>
    				</tbody>
				</table>


		</div>
	</div>
</div>