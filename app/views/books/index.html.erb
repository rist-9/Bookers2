<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<div class="text-success">
				<%= flash[:notice]%>
			</div>
			<h2>User info</h2>
				<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
					<table class="table">
			      		<tbody><tr></tr>
			      		<tr>
			    	  		<th>name</th>
			    	  		<th><%= current_user.name %></th>

			      		</tr>
			      		<tr>
			    	  		<th>introduction</th>
					    	<th><%= current_user.introduction %></th>
					    </tr>
						</tbody>
					</table>
					<div class='row'>
					<%= link_to '', edit_user_path(@user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
					</div>




				<h2><strong>New book</strong></h2>
				<%= form_for(@book) do |f| %>
					<% if @book.errors.any? %>
			    	<div class = "alert alert-warning">
			    		<h3>error</h3>
			        	<ul>
			            	<% @book.errors.full_messages.each do |message| %>
			                <li><%= message %></li>
			            	<% end %>
			        	</ul>
			    	</div>
				<% end %>

			    <p>Title</p>
			    <%= f.text_field :title,class:'col-xs-12' %>

			    <p>Opinion</p>
			    <%= f.text_area :body,class:'col-xs-12' %>

			    <br>
			    <%= f.submit 'Create Book',class:'btn btn-primary col-xs-12' %>

				<% end %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			   <table class="table">
			   	<tr>
			   		<th></th><th>Title</th><th>Opinion</th>
			   	</tr>
			   		<tbody>
			   			<% @books.each do |book| %>
      				<tr>
      						<%= link_to user_path(book) do%>
      						<span><td><%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td></span>
      						<% end %>
						<td><%= link_to book.title, book_path(book) %></td>
						<td><%= book.body %></td>
					</tr>

						<% end %>
					</tbody>
				</table>



		</div>
	</div>
</div>