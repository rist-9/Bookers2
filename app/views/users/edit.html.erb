<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<div class="text-success">
				<%= flash[:notice]%>
			</div>
			<% if @user.errors.any? %>
			    	<div class = "alert alert-warning">
			    		<h3>error</h3>
			        	<ul>
			            	<% @user.errors.full_messages.each do |message| %>
			                <li><%= message %></li>
			            	<% end %>
			        	</ul>
			    	</div>
				<% end %>

			<h2>User info</h2>
			<%= form_for(@user, url: user_path(@user.id)) do |f| %>
					<label for="user_name">Name</label>
					<%= f.text_field :name, autofocus: true %>
			        <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
			        <br>
			        <label for="user_image">Image</label>
			        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
			        		<!-- <form action="">Introduction</form> -->
			       	<strong>Introduction</strong><%= f.text_area :introduction %>
			       			</br>
			       			<br>
			        		<%= f.submit 'Update User' %>
			 <% end %>
		</div>
	</div>
</div>